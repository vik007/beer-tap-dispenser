= form_for dispenser do |f|
  - if dispenser.errors.any?
    #error_explanation
      %ul
        - dispenser.errors.full_messages.each do |message|
          %li= message
  .mb-3
    = f.label :flow_volume, class: 'form-label'
    = f.number_field :flow_volume, min: 0, step: 0.001, class: 'form-control'
  .mb-3
    = f.label :amount, class: 'form-label'
    = f.number_field :amount, min: 0, step: 0.01, class: 'form-control'
  .mb-3
    = f.label :duration, class: 'form-label'
    = f.number_field :duration, min: 0, step: 1, class: 'form-control'
  .mb-3
    = f.submit 'Save', class: 'btn btn-primary w-100'
