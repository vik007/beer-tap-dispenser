= turbo_frame_tag :remote_modal, target: :_top do
  .modal.fade{"data-controller": "modal"}
    .modal-dialog.modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          %h4.modal-title Dispenser
          %button.btn-close{"data-bs-dismiss": "modal", type: "button"}
        .modal-body.pt-0
          .section
            = render 'form', dispenser: dispenser

