.card.form-box-card
  .card-body
    .form-section
      %h5.card-title.text-center
        = image_tag 'logo.png', width: 150
      %p.text-center Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .mb-3
          = f.label :password, "New password", class: 'form-label'
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control'

        .mb-3
          = f.label :password_confirmation, 'Confirm new password', class: 'form-label'
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
        .actions
          = f.submit "Change my password", class: 'btn btn-primary w-100'
      = render "devise/shared/links"
